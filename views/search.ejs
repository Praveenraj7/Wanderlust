<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;

    .filter {
      text-align: center;
      margin-right: 2rem;
      opacity: 0.8;
      cursor: pointer;
      border-bottom: 2px solid transparent;

      p {
        font-size: 0.8rem;
      }
    }

    .filter:hover {
      opacity: 1;
      border-bottom: 2px solid gray;
    }

    #tax-toggle {
      border: 1px solid gray;
      padding: 0.5rem 2rem;
      border-radius: 10px;
    }
  }

  .tax-info {
    display: none;
  }

  #flexSwitchCheckDefault {
    font-size: 1.5rem;
  }
</style>

<div id="filters" class="mt-3 mb-3">
  <div class="filter">
    <i class="fa-solid fa-person-booth"></i>
    <p>Amazing views</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-money-bill"></i>
    <p>Icons</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-warehouse"></i>
    <p>Farms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-water-ladder"></i>
    <p>Amazing pools</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Countryside</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-person-skating"></i>
    <p>Surfing</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beachfront</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-chess-rook"></i>
    <p>Castles</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-water"></i>
    <p>Lakefront</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-chess-rook"></i>
    <p>Castles</p>
  </div>

  <div id="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Price after taxes</label
      >
    </div>
  </div>
</div>

<div class="listing-container">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>">
    <div class="card listing-card" style="width: 18rem">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing-img"
        style="width: 20rem; height: 18rem"
      />
      <div class="card-img-overlay"><p>View</p></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
          <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxToggle = document.getElementById("flexSwitchCheckDefault");

  taxToggle.addEventListener("click", () => {
    let taxInfos = document.getElementsByClassName("tax-info");
    for (let taxInfo of taxInfos) {
      if (taxInfo.style.display == "inline") {
        taxInfo.style.display = "none";
      } else {
        taxInfo.style.display = "inline";
      }
    }
  });
</script>
